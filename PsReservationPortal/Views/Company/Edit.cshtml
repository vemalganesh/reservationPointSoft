@model PsReservationPortal.Models.CompanyModel

@{
    ViewBag.Title = "Edit Company Profile";
}

<style>
    div .form-group{
        margin-left:20px;
    }
    #btnSaveUser{
        margin-left:20px;
        min-width:80px;
    }
</style>

<h4>Company Profile</h4>
<hr />
@using (Html.BeginForm("Edit", "Company", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name)   
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.RegNumber)
        @Html.TextBoxFor(m => m.RegNumber)
    </div>
    @Html.HiddenFor(m => m.Id);
    @Html.HiddenFor(m => m.isActive);

    <button id="submit" type="submit" class="btn btn-primary mb-2">Save</button>
}

