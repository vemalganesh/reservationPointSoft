            </select>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Saturday, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <select name="Saturday" id="Saturday" class="form-control">
                <option value="1" @(Model.Saturday == PsReservationPortal.Models.ReservationExclusionDayModel.OpenClose.Open ? "selected" : "")>Open</option>
