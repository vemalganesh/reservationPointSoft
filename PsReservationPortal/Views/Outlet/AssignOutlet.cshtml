@model PsReservationPortal.ViewModels.AssignOutletViewModel
@{
    ViewBag.Title = "Assign Staff to Outlet";
}

<style>
    div .form-group {
        margin-left: 20px;
    }

    #btnSaveUser {
        margin-left: 20px;
        min-width: 80px;
    }
</style>

<h4>Assign Staff to Outlet</h4>
<hr />
@using (Html.BeginForm("AssignOutlet", "Outlet", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m=>m.User.UserName)<hr />
        @Html.DisplayTextFor(m=>m.User.UserName)
    </div>
    <div class="form-group">
        @Html.LabelFor(m=>m.Outlets)<hr />
        <select id="outletId" name="outletId" class="form-control">
            @foreach(PsReservationPortal.Models.OutletModel outlet in Model.Outlets)
            {
                <option value="@outlet.Id">@outlet.Name, @outlet.Location</option>
            }
        </select>
    </div>
    <input hidden id="userId" name="userId" value="@Model.User.UserId"/>
    <button id="submit" type="submit" class="btn btn-primary mb-2">Save</button>
}

