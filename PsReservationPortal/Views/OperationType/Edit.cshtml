@model PsReservationPortal.Models.OperationTypeModel
@{
    ViewBag.Title = "Operation Type Settings";
}

<h2>Outlet - Operation Type Settings</h2>

@using (Html.BeginForm("Edit", "OperationType", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Edit</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.isAllowReserve, new { @class = "col-md-2 control-label" })
        @Html.CheckBoxFor(x => x.isAllowReserve, new { @class = "form-check-input" })
    </div>
    @Html.HiddenFor(x=>x.Id)
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Submit" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
