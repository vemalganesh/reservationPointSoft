                <option value="0" @(Model.Tuesday == PsReservationPortal.Models.ReservationExclusionDayModel.OpenClose.Close ? "selected" : "")>Close</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Wednesday, new { @class = "col-md-2 control-label" })
