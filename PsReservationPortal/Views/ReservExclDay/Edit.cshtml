@model PsReservationPortal.Models.ReservationExclusionDayModel
@{
    ViewBag.Title = "Reservation Exclusion Day Setting";
}

<h2>Outlet - Reservation Settings</h2>

@using (Html.BeginForm("Edit", "ReservExclDay", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Settings for individual operation days.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Monday, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <select name="Monday" id="Monday" class="form-control">
                <option value="1" @(Model.Monday == PsReservationPortal.Models.ReservationExclusionDayModel.OpenClose.Open ? "selected" : "")>Open</option>
                <option value="0" @(Model.Monday == PsReservationPortal.Models.ReservationExclusionDayModel.OpenClose.Close ? "selected" : "")>Close</option>
            </select>
        </div>
    </div>
