                <option value="0" @(Model.Wednesday == PsReservationPortal.Models.ReservationExclusionDayModel.OpenClose.Close ? "selected" : "")>Close</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Thursday, new { @class = "col-md-2 control-label" })
